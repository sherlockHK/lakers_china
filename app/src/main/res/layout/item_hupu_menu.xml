<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/corner_yellow_bg"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_hupu_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="湖人"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_hupu_menu_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_hupu_menu_icon"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:layout_below="@+id/tv_hupu_menu_title"
        android:layout_alignParentRight="true"
        android:src="@drawable/lakers_logo"/>
</RelativeLayout>