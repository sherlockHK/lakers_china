<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/article_item_background">

    <FrameLayout
        android:id="@+id/list_item_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@mipmap/lakers_icon">
    </FrameLayout>

    <ImageView
        android:id="@+id/list_item_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/video_click_play_selector" />

    <com.kaihu.lakers_china.ui.view.AlignTextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_container"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="title"
        android:textColor="@color/article_text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/video_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/video_title"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:text="date" />

    <TextView
        android:id="@+id/tv_video_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_title"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:text="type" />

</RelativeLayout>